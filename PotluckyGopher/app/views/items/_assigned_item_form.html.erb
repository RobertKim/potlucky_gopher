<%= form_for @assigned_item, :remote => true do |ai| %>
  <%= ai.text_field :guest_name, :class => 'guest_name', :placehoder => 'guest_name'%>
  <%= ai.range_field :quantity_provided, :class => 'quantity_provided', :placehoder => 'quantity_provided', :in => 1..(EventItem.find(@assigned_item.event_item_id).quantity_needed)%>
  <%= ai.string     :guest_email, :class => 'guest_email', :placehoder => 'guest_email'%>
<% end %>
<%= render 'items/assigned_item_form' %>
