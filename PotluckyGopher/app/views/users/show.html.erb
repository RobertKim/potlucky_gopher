
<h4> Welcome to GopherPotLuck, <%= @user.name.titleize %>. </h4>

<%= button_to "Create an Event!", new_event_path, :method => "get" %>
<div id="created_events">
  <h4> Upcoming Events: </h4>
  <ul>
    <% @user.events do |event| %>
      <% if event.upcoming? %>
        <li><%= link_to upcoming.name, event_path(event) %> </li>
      <%end%>
    <% end %>
  </ul><br>


  <%= link_to 'Edit', edit_user_path(@user) %> |

