<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<%= button_to "Create an Event!", new_event_path, :method => "get" %>

<div id="created_events">
  <ul>
    <% @events.each do |event| %>
    <li><%= link_to event.name, event_path(event) %> </li>
    <% end %>
  </ul>
</div>




<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to "Logout", session_path, :method => :delete, data: { confirm: "Are you sure?" } %>
