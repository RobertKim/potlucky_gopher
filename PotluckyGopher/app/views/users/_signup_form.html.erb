
  <%= form_for @user, :html => {:class => 'form-horizontal'}  do |f| %>
  <div class="control-group">
    <label class="control-label" for="inputName">Name</label>
    <div class="controls">
      <%= f.text_field :name, :id => "inputName", :required => true, :placeholder => :name %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <%= f.text_field :email, :id => "inputEmail", :required => true, :placeholder => :email %>
    </div>
  </div>


  <div class="control-group">
    <label class="control-label" for="inputPassword">Password</label>
    <div class="controls">
      <%= f.password_field :password, :id => "inputPassword", :required => true, :placeholder => :password %>
    </div>
  </div>

  <%= f.submit 'Submit', class: "btn btn-large btn-primary"%>    
  <%end%>

