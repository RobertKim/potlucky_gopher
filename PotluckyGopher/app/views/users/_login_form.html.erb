
  <%= form_tag new_session_path, :method => 'get', :html => {:class => 'form-horizontal'} do %>

  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <%= text_field_tag :email, nil,  :placeholder => "email"%>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputPassword">Password</label>
    <div class="controls">
      <%= password_field_tag :password, nil, :id => "inputPassword",:placeholder => "password" %>
    </div>
  </div>

  <%= submit_tag("Submit")%>
  <%end%>
