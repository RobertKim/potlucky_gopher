<h1>Your Event!</h1>

<div class='event'>
  <div class='event_details'>
     <div class="event_form">
      <div class="event_name" placeholder="Title" required>
        <%= @event.name %>
      </div>
      <div class ="place" placeholder="Location">
        <%= @event.description %>
      </div>
      <div type="datetime" class="date" placeholder="Date">
        <%= @event.date %>
      </div>
      <div type="text" class="description" placeholder="Description">
        <%= @event.location %>
      </div>
    </div>
  </div>
  <div class='types_form' style="display:none">

  </div>
  <div class="added_items">
    <% @event.items.each do |i| %>
      <div class="events_items">
        <div class="name"><%= i.name %></div>
        <div class="suggestion"><%= i.suggestion %></div>
        <div class="quantity_needed"><%= i.quantity_needed %></div>
        <div class="quantity_needed"><%= i.quantity_provided %></div>
      </div>
    <% end %>
  </div>

  <div class="claimed_items">

  </div>
</div>
