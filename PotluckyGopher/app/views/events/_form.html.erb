<%= form_for @event do |f| %>
<%= f.text_field :name, :class => ".name", :placeholder => "Title"%>
<%= f.text_field :location, :class => "location", :placeholder => "Location"%>
<%= f.date_select :date, :class => "date", :placeholder => "Date"%>
<%= f.text_area :description, :class => "description", :placeholder => "Description"%>
<%= f.submit %>
<% end %>
