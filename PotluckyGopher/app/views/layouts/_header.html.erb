<header>
	<nav class="navbar">
		<div class= "navbar-inner">
			<h1 id="brand" ><%= link_to "PotLucky!", root_path%></h1>
			<ul id="top_nav" class="nav nav-pills">
				<% unless current_user %>
					<li><button id="new_user" class="btn btn-large btn-success"> Sign Up </button></li>
					<li><%= render 'layouts/session_form' %></li>
					<li><button id="login" class="btn btn-large btn-success"> Log In </button></li>
					<li><%= render 'layouts/session_form_login' %></li>
				<% end %>

				<% if current_user %>

						<li><%= button_to "Log Out", logout_path, :method => :delete %></li>
			
				<% end %>
			</ul>

	
		</div>
	</nav>
</header>