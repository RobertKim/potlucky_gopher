<li class="event_item">
  <fieldset>
      <%= f.fields_for :item do |i| %>
        <%= i.text_field :name, :placeholder => "Name" %>
      <% end %>
      <%= f.text_field :quantity_needed, :class => "quantity_needed", :placeholder => "Quantity Needed" %>
      <%= f.text_field :description, :class => "description", :placeholder => "Description" %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "remove", '#', class: "remove_fields" %>
  </fieldset>
 </li>